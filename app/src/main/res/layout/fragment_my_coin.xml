<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.bahaddindemir.bitcointicker.ui.home.HomeViewModel" />

        <variable
            name="myCoinAdapter"
            type="com.bahaddindemir.bitcointicker.ui.adapter.MyCoinAdapter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_accent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar_only" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Coming Soon"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myCoinsRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_my_coins" />
    </RelativeLayout>
</layout>